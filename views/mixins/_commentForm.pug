mixin commentForm(store)
  form.reviewer#commentform(action=`/comments/${store._id}` method="POST")
    textarea(name="text" placeholder="Add your tips and comments and rating here...")
    .reviewer__meta
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(type="radio" id=`star${num}` name="rating" value=num required)
          label(for=`star${num}`) #num Stars
      input.button(type="submit" value="Submit comment")